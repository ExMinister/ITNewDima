<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StatusBar" TargetType="StatusBar">
        <Setter Property="FontSize" Value="6" />
        <Setter Property="VerticalContentAlignment" Value="Top"></Setter>
    </Style>


    <Style x:Key="StatusBar_Label" TargetType="Label">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
        <Setter Property="FontFamily" Value="Times new romans" />
        <Setter Property="VerticalContentAlignment" Value="Top"></Setter>
    </Style>

    <Style x:Key="UserGridStyle" TargetType="ColumnDefinition">
        <Setter Property="MinWidth" Value="200"/>
    </Style>

    <Style x:Key="UserStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
    </Style>

</ResourceDictionary>